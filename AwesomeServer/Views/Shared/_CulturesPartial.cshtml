@inject IViewLocalizer Localizer

<li class="dropdown">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Localizer["Language"] <i class="fa fa-caret-down"></i></a>
	<ul class="dropdown-menu">
		@foreach (var culture in Startup.SupportedCultures) {
		<li><a asp-controller="Home" asp-action="Culture" asp-route-culture="@culture.Key" asp-route-currentUrl="@Url.RouteUrl(ViewContext.RouteData.Values)">@culture.Value</a></li>
		}
	</ul>
</li>